#version 130



in vec2 texCoord;

uniform sampler2D intensityTexture;
uniform int pyrLvl;

out vec4 fragColor;

/*
 * Reads the patch out of the srcImage and writes it to a texture.
 */
void main(){
    fragColor = textureLod(intensityTexture,texCoord,pyrLvl);
}
